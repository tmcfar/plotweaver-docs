{
    "python.defaultInterpreterPath": "./venv/bin/python",
    "python.formatting.provider": "black",
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.mypyEnabled": true,
    "python.linting.lintOnSave": true,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": null,
    "workbench.colorTheme": "Default Dark+",
    "editor.formatOnPaste": false,
    "files.associations": {
        "*.md": "markdown"
    },
    "markdown.preview.breaks": true,
    "git.autofetch": true,
    "terminal.integrated.defaultProfile.linux": "bash",
    "python.terminal.activateEnvironment": true,
    // Explorer and file visibility settings
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/node_modules": true,
        "**/.pytest_cache": true,
        "**/.mypy_cache": true,
        "**/.coverage": true,
        "**/venv": true,
        "**/.venv": true,
        "**/env": true,
        "**/.env": true,
        "**/.aider*": true,
        "**/.*": true
    },
    // Respect gitignore in explorer
    "explorer.excludeGitIgnore": true,
    // Search settings to respect gitignore
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/venv": true,
        "**/.venv": true,
        "**/env": true,
        "**/__pycache__": true,
        "**/.git": true,
        "**/.pytest_cache": true,
        "**/.mypy_cache": true
    },
    "search.useIgnoreFiles": true,
    "search.useGlobalIgnoreFiles": true,
    
    // Markdown Preview Enhanced settings
    "markdown-preview-enhanced.previewTheme": "none.css",
    "markdown-preview-enhanced.customCSS": ".vscode/markdown.dark.css",
    "markdown-preview-enhanced.automaticallyShowPreviewOfMarkdownBeingEdited": true,
    "markdown-preview-enhanced.scrollSync": true,
    "markdown-preview-enhanced.breakOnSingleNewLine": false,
    "markdown-preview-enhanced.enableTypographer": true,
    "markdown-preview-enhanced.enableWikiLinkSyntax": true,
    "markdown-preview-enhanced.wikiLinkFileExtension": ".md",
    "markdown-preview-enhanced.previewPanePosition": "right",
    "markdown-preview-enhanced.codeBlockTheme": "github",
    "markdown-preview-enhanced.mermaidTheme": "default",
    "markdown-preview-enhanced.tocDepth": 3,
    
    // VS Code Markdown settings
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.quickSuggestions": {
            "comments": "on",
            "strings": "on",
            "other": "on"
        }
    }
}